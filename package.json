{
  "name": "@tui-sandbox/monorepo",
  "version": "1.0.0",
  "license": "MIT",
  "author": "Mika Vilpas",
  "type": "module",
  "scripts": {
    "build": "pnpm --recursive build",
    "dev": "pnpm --filter integration-tests dev",
    "eslint": "eslint --max-warnings=0 .",
    "preinstall": "npx only-allow pnpm",
    "markdownlint": "markdownlint-cli2 README.md",
    "prettier": "prettier --check .",
    "test": "vitest run",
    "tui": "pnpm --filter=library build && pnpm --filter integration-tests exec tui"
  },
  "devDependencies": {
    "@umbrelladocs/linkspector": "0.4.7",
    "cypress": "15.1.0",
    "eslint": "9.34.0",
    "eslint-config-prettier": "10.1.8",
    "eslint-import-resolver-typescript": "4.4.4",
    "eslint-plugin-import-x": "4.16.1",
    "eslint-plugin-import-zod": "1.2.0",
    "eslint-plugin-no-only-tests": "3.3.0",
    "markdownlint-cli2": "0.18.1",
    "prettier": "3.6.2",
    "prettier-plugin-organize-imports": "4.2.0",
    "prettier-plugin-packagejson": "2.5.19",
    "tsx": "4.20.5",
    "typescript": "5.9.2",
    "typescript-eslint": "8.42.0",
    "vitest": "3.2.4",
    "wait-on": "8.0.4"
  },
  "packageManager": "pnpm@10.15.1+sha512.34e538c329b5553014ca8e8f4535997f96180a1d0f614339357449935350d924e22f8614682191264ec33d1462ac21561aff97f6bb18065351c162c7e8f6de67",
  "pnpm": {
    "onlyBuiltDependencies": [
      "cypress",
      "es5-ext",
      "esbuild",
      "node-pty",
      "puppeteer",
      "unrs-resolver"
    ],
    "packageExtensions": {
      "node-pty": {
        "optionalDependencies": {
          "node-gyp": "*"
        }
      }
    }
  }
}
