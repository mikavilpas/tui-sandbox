{
  "name": "@tui-sandbox/monorepo",
  "version": "1.0.0",
  "license": "MIT",
  "author": "Mika Vilpas",
  "type": "module",
  "scripts": {
    "build": "pnpm --recursive build",
    "dev": "pnpm --filter integration-tests dev",
    "eslint": "eslint --max-warnings=0 .",
    "preinstall": "npx only-allow pnpm",
    "markdownlint": "markdownlint-cli2 README.md",
    "prettier": "prettier --check .",
    "test": "vitest run",
    "tui": "pnpm --filter=library build && pnpm --filter integration-tests exec tui"
  },
  "devDependencies": {
    "@umbrelladocs/linkspector": "0.4.7",
    "cypress": "15.5.0",
    "eslint": "9.38.0",
    "eslint-config-prettier": "10.1.8",
    "eslint-import-resolver-typescript": "4.4.4",
    "eslint-plugin-import-x": "4.16.1",
    "eslint-plugin-import-zod": "1.2.0",
    "eslint-plugin-no-only-tests": "3.3.0",
    "markdownlint-cli2": "0.18.1",
    "prettier": "3.6.2",
    "prettier-plugin-organize-imports": "4.3.0",
    "prettier-plugin-packagejson": "2.5.19",
    "tsx": "4.20.6",
    "typescript": "5.9.3",
    "typescript-eslint": "8.46.2",
    "vitest": "3.2.4",
    "wait-on": "9.0.1"
  },
  "packageManager": "pnpm@10.19.0+sha512.c9fc7236e92adf5c8af42fd5bf1612df99c2ceb62f27047032f4720b33f8eacdde311865e91c411f2774f618d82f320808ecb51718bfa82c060c4ba7c76a32b8",
  "pnpm": {
    "onlyBuiltDependencies": [
      "cypress",
      "es5-ext",
      "esbuild",
      "node-pty",
      "puppeteer",
      "unrs-resolver"
    ],
    "packageExtensions": {
      "node-pty": {
        "optionalDependencies": {
          "node-gyp": "*"
        }
      }
    }
  }
}
