{
  "name": "@tui-sandbox/monorepo",
  "version": "1.0.0",
  "license": "MIT",
  "author": "Mika Vilpas",
  "type": "module",
  "scripts": {
    "build": "pnpm --recursive build",
    "dev": "pnpm --filter integration-tests dev",
    "preinstall": "npx only-allow pnpm",
    "lint": "pnpx oxlint --type-aware --deny-warnings && eslint --max-warnings=0 .",
    "markdownlint": "rumdl check",
    "prettier": "prettier --check .",
    "test": "vitest run",
    "tui": "pnpm --filter=library build && pnpm --filter integration-tests exec tui"
  },
  "devDependencies": {
    "@umbrelladocs/linkspector": "0.4.7",
    "cypress": "15.8.1",
    "eslint": "9.39.2",
    "eslint-config-prettier": "10.1.8",
    "eslint-import-resolver-typescript": "4.4.4",
    "eslint-plugin-import-x": "4.16.1",
    "eslint-plugin-import-zod": "1.2.1",
    "eslint-plugin-no-only-tests": "3.3.0",
    "eslint-plugin-oxlint": "1.37.0",
    "oxlint": "1.37.0",
    "oxlint-tsgolint": "0.10.1",
    "prettier": "3.7.4",
    "prettier-plugin-organize-imports": "4.3.0",
    "prettier-plugin-packagejson": "2.5.20",
    "tsx": "4.21.0",
    "typescript": "5.9.3",
    "typescript-eslint": "8.52.0",
    "vitest": "4.0.16",
    "wait-on": "9.0.3"
  },
  "packageManager": "pnpm@10.27.0+sha512.72d699da16b1179c14ba9e64dc71c9a40988cbdc65c264cb0e489db7de917f20dcf4d64d8723625f2969ba52d4b7e2a1170682d9ac2a5dcaeaab732b7e16f04a",
  "pnpm": {
    "onlyBuiltDependencies": [
      "cypress",
      "es5-ext",
      "esbuild",
      "node-pty",
      "puppeteer",
      "unrs-resolver"
    ],
    "packageExtensions": {
      "node-pty": {
        "optionalDependencies": {
          "node-gyp": "*"
        }
      }
    }
  }
}
