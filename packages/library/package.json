{
  "name": "@tui-sandbox/library",
  "version": "11.4.1",
  "repository": {
    "type": "git",
    "url": "https://github.com/mikavilpas/tui-sandbox"
  },
  "license": "MIT",
  "type": "module",
  "bin": {
    "tui": "dist/src/scripts/tui.js"
  },
  "scripts": {
    "build": "concurrently --names 'vite,tsc' 'vite build' 'tsc' --prefix-colors blue,green",
    "dev": "concurrently --names 'client,server' 'pnpm dev:client' 'pnpm dev:server' --prefix-colors blue,green",
    "dev:client": "vite",
    "dev:server": "cd ../integration-tests/ && nodemon --watch ../library --ext '*' --exec 'tsx ../library/src/scripts/tui.ts start'",
    "prepare": "pnpm build",
    "test": "vitest"
  },
  "dependencies": {
    "@catppuccin/palette": "1.7.1",
    "@trpc/client": "11.4.3",
    "@trpc/server": "11.4.3",
    "@xterm/addon-fit": "0.10.0",
    "@xterm/addon-unicode11": "0.8.0",
    "@xterm/xterm": "5.5.0",
    "cors": "2.8.5",
    "cypress": "14.5.3",
    "dree": "5.1.5",
    "express": "5.1.0",
    "neovim": "5.3.0",
    "node-pty": "1.0.0",
    "prettier": "3.6.2",
    "type-fest": "4.41.0",
    "winston": "3.17.0",
    "zod": "4.0.14"
  },
  "devDependencies": {
    "@types/command-exists": "1.2.3",
    "@types/cors": "2.8.19",
    "@types/express": "5.0.3",
    "@types/node": "24.1.0",
    "nodemon": "3.1.10",
    "tsx": "4.20.3",
    "vite": "7.0.6",
    "vitest": "3.2.4"
  },
  "peerDependencies": {
    "cypress": "^13 || ^14",
    "prettier": ">= 3.3.3",
    "type-fest": ">= 4.27.0",
    "typescript": ">= 5.6.3",
    "zod": ">=4.0.0-0 <5"
  },
  "engines": {
    "node": ">=24.0.0"
  }
}
