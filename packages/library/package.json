{
  "name": "@tui-sandbox/library",
  "version": "5.1.2",
  "license": "MIT",
  "type": "module",
  "bin": {
    "tui": "dist/src/scripts/tui.js"
  },
  "scripts": {
    "build": "concurrently --names 'vite,tsc' 'vite build' 'tsc' --prefix-colors blue,green",
    "dev": "concurrently --names 'client,server' 'pnpm dev:client' 'pnpm dev:server' --prefix-colors blue,green",
    "dev:client": "vite",
    "dev:server": "cd ../integration-tests/ && nodemon --watch ../library --ext '*' --exec 'tsx ../library/src/scripts/tui.ts start'",
    "test": "vitest"
  },
  "dependencies": {
    "@catppuccin/palette": "1.7.1",
    "@trpc/client": "11.0.0-rc.638",
    "@trpc/server": "11.0.0-rc.638",
    "@xterm/addon-attach": "0.11.0",
    "@xterm/addon-fit": "0.10.0",
    "@xterm/xterm": "5.5.0",
    "command-exists": "1.2.9",
    "core-js": "3.39.0",
    "cors": "2.8.5",
    "dree": "5.1.5",
    "express": "4.21.1",
    "neovim": "5.3.0",
    "node-pty": "1.0.0",
    "prettier": "3.3.3",
    "tsx": "4.19.2",
    "type-fest": "4.27.0",
    "winston": "3.17.0",
    "zod": "3.23.8"
  },
  "devDependencies": {
    "@runtyping/zod": "2.1.1",
    "@types/command-exists": "1.2.3",
    "@types/cors": "2.8.17",
    "@types/express": "5.0.0",
    "@types/node": "22.9.0",
    "nodemon": "3.1.7",
    "vite": "5.4.11",
    "vitest": "2.1.5"
  }
}
