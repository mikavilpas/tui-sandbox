{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "automerge": true,
  "commitBodyTable": true,
  "extends": ["config:best-practices", "group:allNonMajor"],
  "packageRules": [
    {
      "matchUpdateTypes": ["digest"],
      "automerge": true,
      "automergeType": "branch"
    },
    {
      "description": ["see https://github.com/mikavilpas/tui-sandbox/pull/875"],
      "matchPackageNames": ["node-pty"],
      "allowedVersions": "<1.1.0"
    }
  ],
  "customManagers": [
    {
      "description": ["lua file github-releases"],
      "customType": "regex",
      "datasourceTemplate": "github-releases",
      "managerFilePatterns": [
        "packages/integration-tests/test-environment/.config/nvim/init.lua",
        "packages/integration-tests/test-environment/.config/nvim_alt/init.lua"
      ],
      "matchStrings": [
        "--\\s*renovate:\\s*datasource=github-releases\\s+depName=(?<depName>\\S+)\\s*[\\r\\n]+[^=]+=\\s*\"?(?<currentValue>[^\",]+)\"?"
      ]
    }
  ]
}
